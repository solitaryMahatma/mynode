{
  "name": "koa2-library-starter",
  "version": "1.0.0",
  "description": "koa2 cli",
  "main": "src/app.js",
  "scripts": {
    "test": "jest --watch",
    "dev": "cross-env NODE_ENV=dev nodemon",
    "prod": "cross-env NODE_ENV=prod pm2",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://gitee.com/dmhb_china/koa2-library-starter.git"
  },
  "author": "Dmhb",
  "license": "MIT",
  "dependencies": {
    "async-busboy": "^1.0.1",
    "bcryptjs": "^2.4.3",
    "consola": "^2.11.3",
    "dayjs": "^1.8.19",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-better-validator": "^1.1.0",
    "koa-body": "^4.1.1",
    "koa-helmet": "^5.2.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.15",
    "log4js": "^6.1.1",
    "module-alias": "^2.2.2",
    "mysql2": "^2.1.0",
    "pm2": "^4.2.1",
    "require-directory": "^2.1.1",
    "sequelize": "^5.21.3",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "commitizen": "^4.0.3",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "tests/*",
      "*/.md"
    ],
    "delay": "2500"
  },
  "_moduleAliases": {
    "@root": ".",
    "@dao": "src/dao",
    "@core": "src/core",
    "@model": "src/model",
    "@config": "src/config",
    "@middleware": "src/middleware",
    "@extensions": "src/extensions"
  }
}
